{% extends "base.jinja" %}

{% block title %}Welcome Back - Study Session 2{% endblock %}

{% block additional_styles %}

.features-list {
    text-align: left;
    margin: 20px 0;
    padding: 0;
}

.status-grid {
    display: flex;
    gap: 20px;
    margin: 20px 0;
    justify-content: center;
}

.status-item {
    background: #f8f9fa;
    padding: 20px;
    border-radius: 5px;
    text-align: center;
    flex: 1;
    max-width: 200px;
}

.status-badge {
    display: inline-block;
    padding: 8px 16px;
    border-radius: 20px;
    font-weight: bold;
    margin-top: 10px;
}

.badge-ai {
    background: #007bff;
    color: white;
}

.badge-manual {
    background: #6c757d;
    color: white;
}

.badge-ready {
    background: #28a745;
    color: white;
}

{% endblock %}

{% block content %}
<div class="welcome-card">
    <h1>Welcome Back, {{ participant_id }}!</h1>
    <div class="participant-id">Study Session 2</div>
    
    <p>Welcome back to the second session of the study! Your coding repository from the previous session is ready, and VS Code will automatically open when you start the coding tasks.</p>
    
    <a href="{{ url_for('task') }}" class="btn btn-primary">
        Start Session 2 â†’
    </a>
</div>
{% endblock %}

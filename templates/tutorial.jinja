{% extends "base.jinja" %}

{% block title %}{{ participant_id }} - Tutorial{% endblock %}

{% block additional_styles %}
.tutorial-card {
    text-align: left;
}
h1 {
    text-align: center;
}
.participant-id {
    text-align: center;
}
.video-placeholder {
    background: #e9ecef;
    border: 2px dashed #adb5bd;
    border-radius: 8px;
    padding: 60px 20px;
    text-align: center;
    margin: 20px 0;
    color: #6c757d;
}
.video-icon {
    font-size: 3em;
    margin-bottom: 10px;
    display: block;
}
.tutorial-description {
    margin: 20px 0;
    line-height: 1.6;
    color: #555;
}
{% endblock %}

{% block content %}
<div class="tutorial-card">
    <h1>Coding Tutorial</h1>
    <div class="participant-id">Participant ID: {{ participant_id }}</div>
    
    <div class="tutorial-description">
        <p>Welcome to the coding tutorial! This video will explain your assigned coding condition and provide guidance for the upcoming coding tasks.</p>
    </div>
    
    <div class="video-placeholder">
